#!/bin/ksh
# Submitted by : arjun.singh@hpsglobal.com
# Function : Remove the IPC shared memory for a specified owner

if [ $# -ne 1 ]
then
   echo "Usage:$0 <IPC Owner>"
   exit 1
fi

for v_shmid in $(ipcs -m|grep $1|awk -v owner=$1 ' { if ( owner == $3 ) {print $2} }')
do
  ipcrm -m ${v_shmid}
  if [ $? -eq 0 ]
  then
    echo "IPC Shared Memory $v_shmid removed"
  else
    echo "IPC Shared Memory $v_shmid doesn't exists"
  fi
done

for v_semap in $(ipcs -s|grep $1|awk -v owner=$1 ' { if ( owner == $3 ) {print $2} }')
do
  ipcrm -s ${v_semap}
  if [ $? -eq 0 ]
  then
    echo "IPC Semaphore ID $v_semap removed"
  else
    echo "IPC Semaphore ID $v_semap doesn't exists"
  fi
done

for v_msgq in $(ipcs -s|grep $1|awk -v owner=$1 ' { if ( owner == $3 ) {print $2} }')
do
  ipcrm -q ${v_msgq}
  if [ $? -eq 0 ]
  then
    echo "IPC Message queue ID $v_msgq removed"
  else
    echo "IPC Message queue ID $v_msgq doesn't exists"
  fi
done


